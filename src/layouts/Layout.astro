---
import {Header} from "@/components/patterns/header";
interface Props {
	title: string;
	description?: string;
	image?: string;
	search?: boolean;
}

const { title, description = "A bunch of delightful recipes", image, search }: Props = Astro.props;
import { ViewTransitions } from 'astro:transitions';
import Footer from "@/components/patterns/footer/index.astro";
import "@/styles/globals.css";

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css?family=Nunito:400,700&display=swap" rel="stylesheet">
		<ViewTransitions />
	</head>
	<body class="relative flex min-h-screen flex-col bg-background">
		<Header search={search} client:visible />
		<slot />
		<Footer/>
	</body>
</html>